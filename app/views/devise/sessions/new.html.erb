<h1>Sign In</h1>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="field checkboxes">
    <%= f.label :remember_me %>
    <%= f.check_box :remember_me %> 
  </div>
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>
<%= render :partial => "devise/shared/links" %>